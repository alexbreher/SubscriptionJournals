@model SubscriptionJournals.Models.JournalsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Forms.cshtml";
}

<h1>Create</h1>

<h4>JournalsViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="author" class="control-label"></label>
                <select asp-for="author" class="form-control" asp-items="ViewBag.author"></select>
            </div>
            <div class="custom-file">
            <input asp-for="pdf" class="form-control custom-file-input" />
            <label class="custom-file-label">Choose File...</label>
                </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    </form>
</div>
</div>
@section Scripts{ 
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}

